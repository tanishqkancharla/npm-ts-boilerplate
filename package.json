	"description": "",
	"keywords": [],
	"license": "MIT",
	"main": "dist/index.js",
	"files": [
		"dist/*"
	],
	"repository": {
		"url": "https://github.com/tanishqkancharla/npm-ts-boilerplate"
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "tsc",
		"clean": "rm -rf dist",
		"watch": "tsc --watch",
		"release": "npm run clean; npm run build; npm publish",
		"test": "jest --verbose",
		"bundlesize": "esbuild src/index.ts --outfile=out.js --bundle --minify; rm out.js"
	},
	"devDependencies": {
		"@types/jest": "^27.5.0",
		"esbuild": "^0.14.54",
		"jest": "^28.1.0",
		"ts-jest": "^28.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.6.4"
	}
}
