{
	"name": "npm-ts-boilerplate",
	"version": "0.0.1",
	"author": "Tanishq Kancharla <tanishqkancharla3@gmail.com>",
	"description": "A boilerplate for typescript npm packages",
	"keywords": [],
	"license": "MIT",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/*"
	],
	"repository": {
		"url": "https://github.com/tanishqkancharla/npm-ts-boilerplate"
	},
	"scripts": {
		"clean": "rm -rf dist/*",
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"release": "npm run clean; npm run build; npm publish",
		"test": "jest --verbose",
		"bundlesize": "esbuild ./src/index.ts --bundle --minify --outfile=bundled; rm bundled"
	},
	"devDependencies": {
		"@types/jest": "^27.5.0",
		"esbuild": "^0.14.54",
		"jest": "^28.1.0",
		"ts-jest": "^28.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.6.4"
	}
}
