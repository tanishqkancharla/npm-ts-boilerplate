{
	"name": "npm-ts-boilerplate",
	"version": "0.0.1",
	"author": "Tanishq Kancharla <tanishqkancharla3@gmail.com>",
	"description": "A boilerplate for typescript npm packages",
	"keywords": [],
	"license": "MIT",
	"source": "./src/index.ts",
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/*"
	],
	"repository": {
		"url": "https://github.com/tanishqkancharla/npm-ts-boilerplate"
	},
	"scripts": {
		"watch": "parcel watch",
		"build": "parcel build",
		"typecheck": "tsc --noEmit",
		"release": "npm run build; npm publish",
		"test": "jest --verbose",
		"bundlesize": "esbuild ./src/index.ts --bundle --minify --outfile=bundled; rm bundled"
	},
	"devDependencies": {
		"@parcel/packager-ts": "^2.8.2",
		"@parcel/transformer-typescript-types": "^2.8.2",
		"@types/jest": "^27.5.0",
		"jest": "^28.1.0",
		"parcel": "^2.8.2",
		"ts-jest": "^28.0.5",
		"tsx": "^3.11.0",
		"typescript": "^4.6.4"
	}
}
